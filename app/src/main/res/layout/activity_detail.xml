<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".detail.DetailActivity"
    android:background="@android:color/white">

    <!-- ScrollView for Content -->
    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fab_favorite"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cover Image -->
            <ImageView
                android:id="@+id/iv_event_cover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp" />

            <!-- Event Name -->
            <TextView
                android:id="@+id/tv_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/black"
                android:text="Event Name"
                android:layout_marginBottom="8dp" />

            <!-- Category and City -->
            <TextView
                android:id="@+id/tv_event_category_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/darker_gray"
                android:text="Category • City"
                android:layout_marginBottom="8dp" />

            <!-- Time Information -->
            <TextView
                android:id="@+id/tv_event_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/darker_gray"
                android:text="Start: Jan 1, 2025 • End: Jan 2, 2025"
                android:layout_marginBottom="16dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/tv_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/black"
                android:text="Event description goes here. This is a placeholder for the description of the event."
                android:layout_marginBottom="16dp" />

            <!-- Quota and Registrants -->
            <TextView
                android:id="@+id/tv_event_quota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/darker_gray"
                android:text="Quota: 100 • Registrants: 50"
                android:layout_marginBottom="16dp" />

            <!-- External Link Button -->
            <Button
                android:id="@+id/btn_open_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Event Link"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/baseline_favorite_border_24"
        android:backgroundTint="@color/white" />
</RelativeLayout>
